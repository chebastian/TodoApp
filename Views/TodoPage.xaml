<UserControl x:Class="Views.TodoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views" 
             xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>

        <StackPanel.Resources>
            <Style x:Key="TextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Padding" Value="10"/>
            </Style>
        </StackPanel.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions> 
            <TextBox x:Name="nameBox" Text="{Binding NextTodoName, UpdateSourceTrigger=PropertyChanged}" >
                <Behaviors:Interaction.Triggers>
                    <Behaviors:KeyTrigger Key="Return">
                        <Behaviors:InvokeCommandAction Command="{Binding AddCommand}" CommandParameter="{Binding}"/>
                    </Behaviors:KeyTrigger>
                </Behaviors:Interaction.Triggers>
            </TextBox>
            <Button Padding="20" Grid.Column="1" Content="Add" Command="{Binding AddCommand}" Click="FocusOnText"/>
        </Grid>

        <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid x:Name="item" >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource TextStyle}" Text="{Binding Name}"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" x:Name="chkComplete" Visibility="Collapsed">
                            <!--<CheckBox VerticalAlignment="Center"  IsChecked="{Binding Completed, Mode=OneWay}" />-->
                            <Button Content="Remove" CommandParameter="{Binding}" Command="{Binding Path=DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType={x:Type local:TodoPage}}}" />
                        </StackPanel>
                        <Behaviors:Interaction.Triggers>
                            <Behaviors:EventTrigger EventName="MouseEnter" SourceName="item">
                                <Behaviors:ChangePropertyAction TargetName="chkComplete" PropertyName="Visibility" Value="Visible"/>
                            </Behaviors:EventTrigger>

                            <Behaviors:EventTrigger EventName="MouseLeave" SourceName="item">
                                <Behaviors:ChangePropertyAction TargetName="chkComplete" PropertyName="Visibility" Value="Collapsed"/>
                            </Behaviors:EventTrigger>
                            <Behaviors:EventTrigger EventName="MouseUp" SourceName="item">
                                <Behaviors:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:TodoPage}},Path=DataContext.CompleteItemCommand}" CommandParameter="{Binding}"/>
                            </Behaviors:EventTrigger>
                        </Behaviors:Interaction.Triggers>

                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Background" Value="HotPink"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Completed}" Value="True">
                                        <Setter Property="Background" Value="Green"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
